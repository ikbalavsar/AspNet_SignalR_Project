@model UpdateNotificationDto

@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Bildirim Düzenle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="NotificationId" />

							<div class="form-group">
								<label for="description">Bildirim Açıklaması</label>
								<input type="text" asp-for="Description" class="form-control" id="description">
							</div>

							<div class="form-group">
								<label for="type">Bildirim Türü</label>
								<input type="text" asp-for="Type" class="form-control" id="type">
							</div>

							<div class="form-group">
								<label for="icon">Bildirim İconu</label>
								<input type="text" asp-for="Icon" class="form-control" id="icon">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-success">Bildirim Düzenle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


