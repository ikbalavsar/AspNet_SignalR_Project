@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İçerik İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İndirim Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="DiscountID" />
							<div class="form-group">
								<label for="Title">Başlık</label>
								<input type="text" asp-for="Title" class="form-control" id="Title">
							</div>

							<div class="form-group">
								<label for="Amount">İndirim Miktarı</label>
								<input type="text" asp-for="Amount" class="form-control" id="Amount">
							</div>


							<div class="form-group">
								<label for="description">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
								@* <input type="text" asp-for="Description" class="form-control" id="description"> *@
							</div>

							<div class="form-group">
								<label for="ImageUrl">Resim Urli</label>
								<input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-success">İçerik Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>
