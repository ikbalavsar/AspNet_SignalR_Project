@model List<ResultDiscountDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa İndirim İçerikleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim İçerik Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirimler alanı ile ilgili içerik işlemlerini aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">İndirim Miktarı</th>
									<th scope="col">Açıklama </th>
									<th scope="col">Resim Urli </th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountID</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-warning">Durum</a> </td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a> </td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}
								<a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirim İçeriği Girişi</a>
							</tbody>
						</table>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
