@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda İçerik Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili içerik işlemlerini aşağıdan gerçekleştirebilirsiniz. Sadece 1 tane İletişim alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Lokasyon</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">Mail </th>
									<th scope="col">Footer Açıklama </th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactID</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a> </td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>

								}
								<a href="/Contact/CreateContact" class="btn btn-outline-primary">Yeni İletişim İçeriği Girişi</a>
							</tbody>
						</table>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>
