@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İçerik İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkımızda Alanı Ekle</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="aboutName">Hakkımızda Başlık</label>
								<input type="text" asp-for="Title" class="form-control" id="aboutName">
							</div>

							<div class="form-group">
								<label for="description">Hakkımızda Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
								@* <input type="text" asp-for="Description" class="form-control" id="description"> *@
							</div>

							<div class="form-group">
								<label for="imageurl">Hakkımızda Resim Urli</label>
								<input type="text" asp-for="ImageURl" class="form-control" id="imageurl">
							</div>





						</div>
						<div class="card-action">
							<button class="btn btn-success">İçerik Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


