@model SignalR_Web_UI.Dtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="CategoryID" />

							<div class="form-group">
								<label for="categoryname">Kategori Adı</label>
								<input type="text" asp-for="Name" class="form-control" id="categoryname">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-success">Kategoriyi Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

