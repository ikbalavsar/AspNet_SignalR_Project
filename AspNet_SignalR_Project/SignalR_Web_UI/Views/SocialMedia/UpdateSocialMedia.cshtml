@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İçerik İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Sosyal Medya Alanı Ekle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="SocialMediaID" />
							<div class="form-group">
								<label for="Title">Başlık</label>
								<input type="text" asp-for="Title" class="form-control" id="Title">
							</div>

							<div class="form-group">
								<label for="Url">Url</label>
								<input type="text" asp-for="Url" class="form-control" id="Url">
							</div>

							<div class="form-group">
								<label for="Icon">İkon</label>
								<input type="text" asp-for="Icon" class="form-control" id="Icon">
							</div>



						</div>
						<div class="card-action">
							<button class="btn btn-success">İçerik Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


